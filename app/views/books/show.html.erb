<div class="sidebar">
    <div class="container px-5 px-sm-0">

        <%= render 'users/sidebar' %>

        <%= render 'books/sidebar' %>

    </div>
</div>

<div class="container ">
    <div class="row">
        <h2>Book detail</h2>
        <div class="table">
            <div>
                <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
            </div>
            <div>
                <%= @book.title %>
            </div>
            <div>
                <%= @book.body %>
            </div>
            <div>
                <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
            </div>
        </div>
    </div>
</div>