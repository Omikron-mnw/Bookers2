<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-11 offset-md-1">
      <h2>User info</h2>

      <% if @user.errors.any? %>
      <div id="error_explanation">
        <span><%= @user.errors.count %>件のエラーが発生しました</span>
      </div>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
    </div>

    <%= form_with model:@user, local:true do |f| %>
    <div class="col-md-11 offset-md-1">
      <label for = "inputName" >Name</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name" %> <!-- placeholderいる？ -->
      <!--%= attachment_image_tag @user, :profile_image, size:'40x40', fallback: "no_image.jpg"%>-->

      <label for="inputImage">ProfileImage</label>
      <%= f.attachment_field :profile_image, placeholder: "profile_image" %>
      <label for = "inputInroduction" >Introduction</label>
      <%= f.text_area :introduction, class: 'form-control', id: 'user_introduction' %> <!-- 要素不足? -->
      <%= f.submit "Update User" %>
    <% end %>
    </div>
  </div>
</div>