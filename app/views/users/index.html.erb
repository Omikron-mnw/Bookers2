<div class="sidebar">
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <%= render 'users/sidebar', user: @user%>

          <%= render 'books/sidebar', book: @book%>
        </div>

        <div class="col-md-8 offset-md-1">
          <table class="table">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <% @users.each do |user| %>
                <th><%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %></th>
                <th><%= user.name %></th>
                <th><%= link_to "Show", user_path(user.id) %></th>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</div>



