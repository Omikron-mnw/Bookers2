<%= render 'users/sidebar', user: @user%>

<%= render 'books/sidebar', book: @book%>

<% @users.each do |user| %>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <p><%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %></p>
  <p><%= user.name %></p>
  <p><%= link_to "Show", user_path(user.id) %></p>
</table>
<% end %>
<%= paginate @users %>