
<% book.book_comments.each do |book_comment| %>
  <table>
    <tr>
      <td>
        <%= attachment_image_tag user, :profile_image, size:'30x30', format: 'jpg', fallback: "no_image.jpg" %><br>
        <%= book_comment.user.name %>
      </td>
      <td><%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= book_comment.comment %></td>
      <td>
      <% if book_comment.user == current_user %>
      <div class="comment-delete">
          <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true %>
      </div>
      <% end %>
      </td>
    </tr>
  </table>
<% end %>
